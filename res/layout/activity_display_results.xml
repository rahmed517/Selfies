<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow>

            <ImageView
                android:id="@+id/A_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/A_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Asymmetry"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/A_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="28sp" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/B_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/B_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Border"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/B_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="28sp" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/C_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/C_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Color"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/C_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="28sp" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/D_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/D_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Diameter"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/D_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="28sp" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/Tot_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/Tot_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Overall Score"
                android:textColor="#0096fd"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Tot_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="28sp" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table" >

        <TextView
            android:id="@+id/instr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
         	android:paddingTop = "25dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="italic" />
    </FrameLayout>

</RelativeLayout>